<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>FirstWebProject</display-name>
  <servlet>
  <servlet-name>LibraryServlet</servlet-name>
  <servlet-class>firstProject.LibraryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>LibraryServlet</servlet-name>
  <url-pattern>/library</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DataBaseViewServlet</servlet-name>
    <servlet-class>firstProject.DataBaseViewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DataBaseViewServlet</servlet-name>
    <url-pattern>/Authors</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>NotifeOnlineUsersServlet</servlet-name>
    <servlet-class>firstProject.NotifeOnlineUsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NotifeOnlineUsersServlet</servlet-name>
    <url-pattern>/online</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthRequestFilter</filter-name>
    <filter-class>firstProject.AuthRequestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthRequestFilter</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CheckParamFilter</filter-name>
    <filter-class>firstProject.CheckParamFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckParamFilter</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>FirstPageServlet</servlet-name>
    <servlet-class>firstProject.FirstPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FirstPageServlet</servlet-name>
    <url-pattern>/static</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>SecondPageServlet</servlet-name>
    <servlet-class>firstProject.SecondPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SecondPageServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>firstProject.OnlineUserListener</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>